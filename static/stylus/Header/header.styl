.header
  border 1px solid #DDD
  &-content
    align-items center
    display flex
    flex-direction row
    justify-content space-between

  &-query
    padding 1em
    width 350px
    border-radius 10px
    border 1px solid #DDD
    outline none
    transition .3s
    &:focus
      border: 1px solid #26a69a


.navigation
  background #607d8b
  display flex
  flex-direction column
  height 100vh
  text-align center
  position absolute
  top 0
  left -3000px
  z-index 1
  width 25%
  transition .3s

  .header-list
    width 100%
    > li
        float none
        > a
            display block

.show
  left 0

.dropdown-content
  > li
    > a
        color #311b92
