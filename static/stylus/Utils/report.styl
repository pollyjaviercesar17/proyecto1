.Page
  box-shadow 0 2px 20px rgba(black, .4)
  min-height 70vh
  width 50%
  margin 30px auto
  padding 5em
  background #FFFFFF
  > p
      line-height 1.5
  &-contentTitle
    display flex
    flex-direction row
    align-items center
    justify-content center

  &-title
    padding 0
    margin 0
    text-transform uppercase

  .textContent
    text-align justify
    .mensaje
      text-indent: 30px
    .responsable
      text-align center
      line-height: 1.5

  .cintillo
    margin-bottom 20px
    > img
        width 100%
        height 30%

.list-report
  margin-top 30px

@media print
  .Page
    width 100%
  .header
    display none
